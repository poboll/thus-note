# 服务器配置
PORT=3000
NODE_ENV=development

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/thus-note

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CORS配置
CORS_ORIGIN=*

# JWT配置
JWT_SECRET=your-jwt-secret-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 加密配置（与LAF保持一致）
# RSA密钥对（生产环境应该从安全的地方加载）
RSA_PUBLIC_KEY=
RSA_PRIVATE_KEY=
AES_KEY=

# OAuth配置
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:3000/api/auth/oauth/github/callback

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/oauth/google/callback

WECHAT_APP_ID=
WECHAT_APP_SECRET=
WECHAT_CALLBACK_URL=http://localhost:3000/api/auth/oauth/wechat/callback

# 邮件服务配置
EMAIL_SERVICE=resend
RESEND_API_KEY=
TENCENT_SES_SECRET_ID=
TENCENT_SES_SECRET_KEY=

# 短信服务配置
SMS_SERVICE=tencent
TENCENT_SMS_SECRET_ID=
TENCENT_SMS_SECRET_KEY=
TENCENT_SMS_APP_ID=

# 七牛云配置
QINIU_ACCESS_KEY=
QINIU_SECRET_KEY=
QINIU_BUCKET=
QINIU_DOMAIN=

# AI配置 - 支持OpenAI兼容API（火山引擎/GPTClub代理/原生OpenAI等）
OPENAI_API_KEY=
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo

# Milvus配置
MILVUS_HOST=localhost
MILVUS_PORT=19530
