{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": [
			"node_modules/**"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"noConfusingVoidType": "off",
				"noAssignInExpressions": "off",
				"noGlobalIsNaN": "off",
				"useValidTypeof": "off",
				"noGlobalAssign": "off"
			},
			"complexity": {
				"noBannedTypes": "off",
				"noForEach": "off",
				"noOptionalChain": "off",
				"noExtraBooleanCast": "off",
				"noStaticOnlyClass": "off",
				"noThisInStatic": "off",
				"noUselessThisAlias": "off"
			},
			"style": {
				"useShorthandFunctionType": "off",
				"noUnusedTemplateLiteral": "off",
				"noParameterAssign": "off",
				"useTemplate": "off"
			},
			"performance": {
				"noDelete": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}