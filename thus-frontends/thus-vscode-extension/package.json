{
  "name": "thus-vscode-extension",
  "displayName": "%package.displayName%",
  "description": "%package.description%",
  "publisher": "ptsd",
  "version": "0.19.1",
  "author": {
    "name": "yenche123",
    "email": "tsuiyenche@outlook.com",
    "url": "https://u1s1.site"
  },
  "license": "AGPL-3.0-or-later",
  "engines": {
    "vscode": "^1.84.0"
  },
  "bugs": {
    "url": "https://github.com/yenche123/thus-note/issues"
  },
  "categories": [
    "AI",
    "Notebooks",
    "Other"
  ],
  "keywords": [
    "Ai-Native",
    "Local-First",
    "serverless",
    "cross-platform",
    "calendar",
    "todo",
    "notes",
    "memo"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onUri"
  ],
  "main": "./dist/node/extension.js",
  "browser": "./dist/web/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ptsd.thus-vscode-extension.record",
        "title": "%liubai.record.title%",
        "category": "Thus"
      },
      {
        "command": "ptsd.thus-vscode-extension.record_with_code",
        "title": "%liubai.record_with_code.title%",
        "category": "Thus"
      },
      {
        "command": "ptsd.thus-vscode-extension.record_with_code2",
        "title": "%liubai.record_with_code2.title%",
        "category": "Thus"
      },
      {
        "command": "ptsd.thus-vscode-extension.login_or_logout",
        "title": "%liubai.login_or_logout.title%",
        "category": "Thus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ptsd.thus-vscode-extension.recordWithCode",
          "when": "editorHasSelection",
          "group": "9_cutcopypaste"
        }
      ],
      "commandPalette": [
        {
          "command": "ptsd.thus-vscode-extension.recordWithCode",
          "when": "false"
        },
        {
          "command": "ptsd.thus-vscode-extension.recordWithCode2",
          "when": "editorHasSelection"
        },
        {
          "command": "ptsd.thus-vscode-extension.record",
          "when": "!editorHasSelection"
        }
      ]
    }
  },
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "icon": "images/logo_256x256_v3.png",
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "open-in-browser": "vscode-test-web --extensionDevelopmentPath=. ."
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.13.14",
    "@types/vscode": "~1.84.2",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/test-web": "^0.0.71",
    "dotenv": "^17.2.1",
    "esbuild": "^0.25.8",
    "esbuild-plugin-polyfill-node": "^0.3.0",
    "eslint": "^9.32.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yenche123/thus-note.git",
    "directory": "thus-frontends/thus-vscode-extension"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@playwright/browser-chromium"
    ],
    "onlyBuiltDependencies": [
      "@playwright/browser-chromium",
      "esbuild"
    ]
  }
}
