
.wv-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  min-height: 500px;
}

.wv-head {
  width: 25vh;
  height: 25vh;
  min-height: 200px;
  max-width: 90vw;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--big-word-style);
  color: var(--main-text);
  text-align: center;
  padding-top: 100px;
}

.wv-title {
  width: 90%;
  max-width: 400px;
  font-size: var(--desc-font);
  color: var(--main-text);
  margin-bottom: 20px;
  text-align: center;
}

.wv-learn-more {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40px;
  padding: 4px 20px;
  font-size: var(--btn-font);
  color: var(--main-note);
}

.wv-lm-icon {
  width: 20px;
  height: 20px;
  margin-right: 6px;
}

.wv-btns {
  width: 90%;
  max-width: 400px;
  position: relative;
  padding-bottom: 50px;
}