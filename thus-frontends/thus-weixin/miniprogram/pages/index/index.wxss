/** index.wxss **/

@import "../../styles/custom-styles.wxss";

page {
  background-color: var(--card-bg);
}

.index-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  min-height: 90vh;
  background-color: var(--bg-color);
}

.index-virtual-one {
  width: 100%;
  height: 120px;
}

.index-button {
  width: 92%;
  max-width: var(--max-mobile);
  box-sizing: border-box;
  padding: 36px 36px 30px;
  border-radius: 24px;
  background-color: var(--card-bg);
  position: relative;
  margin-bottom: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.ib-image {
  width: 50px;
  height: 50px;
  margin-right: 10px;
}

.ib-title {
  font-size: var(--title-font);
  color: var(--main-normal);
  font-weight: 700;
  width: 50%;
  text-align: center;
  line-height: 1.25;
}

.liu-en .ib-title {
  width: 66%;
}

.index-virtual-two {
  width: 100%;
  height: 30px;
}

.index-tasks {
  width: 92%;
  max-width: var(--max-mobile);
  position: relative;
  padding-bottom: 20px;
}

.index-task-title {
  font-size: var(--title-font);
  color: var(--main-normal);
  font-weight: 700;
  padding-bottom: 12px;
}


.index-footer-container {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  width: 100%;
  height: 10vh;
  min-height: 50px;
  box-sizing: border-box;
  padding-top: 10px;
  background-color: var(--bg-color);
}

.index-logo {
  width: 28px;
  height: 28px;
  margin-right: 6px;
}

.index-powered-by {
  font-size: var(--mini-font);
  color: var(--main-note);
}