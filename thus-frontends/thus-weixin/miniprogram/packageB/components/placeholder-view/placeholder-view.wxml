
<view class="pv-shell" wx:if="{{enable && canUseSkyline}}">
  <view class="pv-container {{show ? '' : 'pv-container_hidden'}}"
    style="height: {{height3}}px; transition: {{TRANSITION_MS}}ms;"
  >
    <!-- Loading -->
    <pulsar-loader wx:if="{{pState <= 1}}"></pulsar-loader>

    <!-- Emoji box -->
    <view wx:if="{{pState >= 50}}" class="pv-emoji-box">

      <image 
        src="../../images/shared/face_in_clouds_3d.png"
        class="pv-emoji-image"
      />

    </view>

    <!-- Title -->
    <view wx:if="{{pState >= 50}}" class="pv-err-title">
      <text wx:if="{{pState === pageStates.NO_DATA}}">{{t1.no_data}}</text>
      <text wx:elif="{{pState === pageStates.NETWORK_ERR}}">{{t1.network}}</text>
      <text wx:elif="{{pState === pageStates.TOO_HOT}}">{{t1.too_hot}}</text>
      <text wx:elif="{{pState === pageStates.NOT_IN_ROOM}}">{{t1.not_in_room_1}}</text>
      <text wx:else>{{t1.unknown_err}}</text>
    </view>

    <!-- Tip -->
    <view wx:if="{{pState >= 50}}" class="pv-err-tip">
      <text wx:if="{{errTip}}">{{errTip}}</text>
      <text wx:elif="{{pState === pageStates.TOO_HOT}}">{{t1.come_later}}</text>
      <text wx:elif="{{pState === pageStates.NOT_IN_ROOM}}">{{t1.not_in_room_2}}</text>
    </view>

  </view>
</view>

<!-- if we can not use skyline -->
<view class="pv-shell" wx:elif="{{!canUseSkyline}}">
  <view class="pv-container pv-container2"
    style="height: {{height3}}px; transition: {{TRANSITION_MS}}ms;"
  >

    <!-- Emoji box -->
    <view class="pv-emoji-box">
      <image 
        src="../../images/shared/face_in_clouds_3d.png"
        class="pv-emoji-image"
      />
    </view>

    <!-- Title -->
    <view class="pv-err-title">
      <text>{{t1.skyline_1}}</text>
    </view>

    <!-- Tip -->
    <view class="pv-err-tip">
      <text>{{t1.skyline_2}}</text>
    </view>
  
  </view>
</view>
