

.image-box {
  width: 100%;
  padding-bottom: 150%;
  box-sizing: border-box;
  position: relative;
  transition: .15s;
}

.image-box_hover {
  transform: scale(1.02);
}

.the-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  transition: .3s;
  opacity: 0;
}

.the-image_loaded {
  opacity: 1;
}

.image-error {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: var(--card-bg);
}

.image-error-icon {
  width: 40px;
  height: 40px;
  margin-bottom: 20px;
}

.image-error-text {
  font-size: var(--btn-font);
  color: var(--main-note);
  text-align: center;
}

.image-skeleton {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: var(--skeleton-bg);
  background-size: 400% 100%;
  animation-name: skeleton-loading;
  animation-duration: 1.5s;
  animation-iteration-count: infinite;
  animation-timing-function: ease;
}

@keyframes skeleton-loading {
  0% {
    background-position: 100% 50%;
  }
  100% {
    background-position: 0% 50%;
  }
}